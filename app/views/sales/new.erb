<h1>Post a sale</h1>
<hr/>


<% if @sale && @sale.errors.any? %>
  <div>
    <strong>Some issues with your sale, please fix them:</strong>
    <ul>
      <% @sale.errors.full_messages.each do |sale| %>
        <li><%= sale %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" enctype="multipart/form-data" action="/sales">
  <div>
    <label>Address:</label>
    <input type="text" name="address" >
  </div>

  <div>
    <label>Start time:</label>
    <input type="time" name="start_time" >
  </div>

  <div>
    <label>End time:</label>
    <input type="time" name="end_time" >
  </div>

  <div>
    <label>Description:</label>
    <input type="text" name="description">
  </div>

  <div>
    <label>Upload image:</label>
    <input type="file" name="image_path" value="show your junk!">
  </div>

  <div>
    <label>Item 1:</label> 
    <input type ="text" name="item_name1">
  </div>

  <div>
    <label>Item 2:</label> 
    <input type ="text" name="item_name2">
  </div>

  <div>
    <label>Item 3:</label> 
    <input type ="text" name="item_name3">
  </div>

  <div>
    <label>Item 4:</label> 
    <input type ="text" name="item_name4">
  </div>

  <div>
    <label>Item 5:</label> 
    <input type ="text" name="item_name5">
  </div>



  
  <input name="salesubmit" type="submit" value="Submit" >
</form>